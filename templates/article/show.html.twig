{% extends 'base.html.twig' %}

{% block title %}Liste Article{% endblock %}

{% block body %}

<div class = "container-fluid">

    <div class="row">

        <h1 class = "text-center">{{ article.title }}</h1>

    </div>

    

    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">

            <div class="col">

                <div class="card h-100">

                    <img src="{{ asset("uploads/images/" ~ article.image) }}" class="card-img-top imgCard" alt="image superbe">

                        <div class="card-body">

                            <h2 class="card-title text-center">{{ article.title }}</h2>
                            <p class="card-text text-center">{{ article.content }}</p>
                            <p class="text-center"><small class = "text-muted"><strong>Auteur :</strong> {{ article.author }}</small></p>
                            <p class="text-center"><small class = "text-muted"><strong>Cat√©gorie :</strong> {{ article.categorie }}</small></p>  
                            

                            <div class = "card-footer">
                                <a href="{{ path('article_edit', { "id": article.id }) }}" class = "btn btn-outline-info col-3 btnForms3">Modifier</a>
                                {{ include('article/_delete_form.html.twig') }}
                            </div>

                        </div>
                </div>
            </div>

    </div>

    

</div>

{% endblock %}
